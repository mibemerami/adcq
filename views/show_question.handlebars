<div class="container">
    <script>
        function changeColor(newColor) {
            document.questionCounter++
            var elem = document.getElementById("para1")
            elem.style.color = newColor
        }
        function initializeQuestionData() {
            document.questionCounter = 0
            document.questionAnswer = false
            document.questionsArray = JSON.parse('{{{supplyQuestions}}}')
        }
        function performNextStep() {
            if(document.questionAnswer){
                document.questionCounter++
            }else{
                document.questionAnswer = !document.questionAnswer
            }
            let question = document.questionsArray[document.questionCounter]
            document.getElementById("para1").textContent  = "Q: "+ question.question
        }
        document.addEventListener('DOMContentLoaded', initializeQuestionData)
    </script>
    <h1>Test Run</h1>
    <h2>Demonstration</h2>
    <div class="card card-body m-1">
        <p class="text-center " id="question">Q: {{questions.0.question}}</p>
        <p class="text-center " id="answer" >A: {{showQuestionsOnTestRun}}</p>
        <p id="docuTopic" class="text-center"></p>


        <div class="btn-toolbar justify-content-between m-2" role="toolbar" aria-label="Toolbar with button groups">
            <div class="btn-group mr-2" role="group" aria-label="First group">
                <button type="button" class="btn btn-secondary">Edit</button>
            </div>
            <div class="btn-group mr-2 " role="group" aria-label="Second group">
                <button type="button"  onclick="changeColor('red');" class="btn btn-secondary">Back</button>
                <button type="button"  onclick="changeColor('blue');" class="btn btn-secondary">Next</button>
            </div>
        </div>
    </div>
    <div>
        <p class="text-center">
            Tags:
            <br> demo, test
        </p>
    </div>
</div>